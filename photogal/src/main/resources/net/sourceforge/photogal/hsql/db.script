CREATE MEMORY TABLE GALLERIES(GALLERY_ID BIGINT NOT NULL PRIMARY KEY,LAST_MODIFIED TIMESTAMP NOT NULL,NAME VARCHAR(255),DESCRIPTION LONGVARCHAR,CREATION_DATE TIMESTAMP NOT NULL,ORDER_INDEX INTEGER NOT NULL,PUBLIC BOOLEAN NOT NULL,GALLERY_IMAGE_ID BIGINT)
CREATE MEMORY TABLE GALLERY_IMAGES(GALLERY_ID BIGINT NOT NULL,IMAGE_ID BIGINT NOT NULL,IMAGE_INDEX INTEGER NOT NULL,PRIMARY KEY(GALLERY_ID,IMAGE_INDEX),CONSTRAINT FK_1 FOREIGN KEY(GALLERY_ID) REFERENCES GALLERIES(GALLERY_ID))
CREATE MEMORY TABLE IMAGES(IMAGE_ID BIGINT NOT NULL PRIMARY KEY,LAST_MODIFIED TIMESTAMP NOT NULL,LOCATION VARCHAR(255) NOT NULL,WIDTH INTEGER NOT NULL,HEIGHT INTEGER NOT NULL,TITLE VARCHAR(255),DESCRIPTION LONGVARCHAR,CREATION_DATE TIMESTAMP NOT NULL,CREATION_DAY INTEGER,CREATION_MONTH INTEGER,CREATION_YEAR INTEGER)
CREATE MEMORY TABLE IMAGE_KEYWORDS(IMAGE_ID BIGINT NOT NULL,KEYWORD VARCHAR(255),KEYWORD_INDEX INTEGER NOT NULL,PRIMARY KEY(IMAGE_ID,KEYWORD_INDEX),CONSTRAINT FK_2 FOREIGN KEY(IMAGE_ID) REFERENCES IMAGES(IMAGE_ID))
ALTER TABLE GALLERIES ADD CONSTRAINT FK_3 FOREIGN KEY(GALLERY_IMAGE_ID) REFERENCES IMAGES(IMAGE_ID)
ALTER TABLE GALLERY_IMAGES ADD CONSTRAINT FK_4 FOREIGN KEY(IMAGE_ID) REFERENCES IMAGES(IMAGE_ID)
